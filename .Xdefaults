!.Xdefaults
!Last modified: samedi 31/01/2015 at 15:12:46
!--------------------------------------------
!
! URXVT
! General
! space between text and border
urxvt.internalBorder: 4
! transparency
urxvt.depth: 32
! niveau de transparence dans urxvt.background plus bas ...
urxvt.transparent: true
!urxvt.tintColor: #1f1f1f
urxvt.shading: 20




urxvt*termName:           rxvt-unicode-256color
urxvt*loginShell:         true
! cacher scrollbar (ascenseur)
URxvt.scrollBar:        false
! do not scroll with output
URxvt*scrollTtyOutput: false
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
!Scrollback buffer in secondary screen (like 'less' for example) - next 2 lines : -----++--
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
! better with mouse to scrolling in less
! need in AUR: rxvt-unicode-better-wheel-scroling
URxvt.secondaryWheel: 1
! end Scrollback buffer----------------------------------------------------------------++--/
urxvt*saveLines:         65535
urxvt*cursorBlink:       false
!urxvt*cursorUnderline:   true
urxvt*urgentOnBell:       true
!urxvt*override-redirect:false
!urxvt*borderLess:       false
URxvt*internalBorder:       0
URxvt*externalBorder:       0
! Extensions
!urxvt*perl-lib:        /usr/lib/urxvt/perl

! Yankable URLs (no mouse)____________________++_
!URxvt*perl-ext: default,url-select
URxvt.perl-ext-common: default,url-select,config-reload
! paquet urxvt-perls (click and yank url)
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/dwb
URxvt.url-select.underline: true
! man urxvt-perls
! Alt+U: enter selection mode. Last url selected. Repeat Alt+U to select next upward url.
! k Select next upward url
! j Select next downward url
! Return Open selected url
! o Open selected url in browser without quitting selection mode
! y Yank sedected url and quit selection mode
! Esc Cancel url selection mode
! --------------------------------------------++--


! Catch ugly URLs
urxvt*cutchars:        '"'()*<>[]{|}
! Appearance
!urxvt*font:     -xos4-terminus-medium-*-*-*-14-*-*-*-*-*-iso8859-2,xft:Inconsolata\ for\ Powerline:pixelsize=12:antialiasing=true:hinting=true
!urxvt*boldFont: -xos4-terminus-bold-*-*-*-14-*-*-*-*-*-iso8859-2,xft:Inconsolata\ for\ Powerline:pixelsize=12:antialiasing=true:hinting=true
!urxvt*font: xft:Monofur\ for\ Powerline:size=12:antialiasing=true
!urxvt*boldFont: xft:Monofur\ for\ Powerline:size=12:antialiasing=true
!urxvt*font: xft:Roboto\ Mono\ for\ Powerline:size=12:antialiasing=true
!urxvt*boldFont: xft:Roboto\ Mono\ Bold\ for\ Powerline\ Bold:size=12:antialiasing=true
urxvt*font: xft:profont:size=8:antialiasing=false,xft:Inconsolata\ for\ Powerline:pixelsize=12:antialiasing=true:hinting=true
urxvt*boldFont: xft:profont:size=8:antialiasing=false,xft:Inconsolata\ for\ Powerline:pixelsize=12:antialiasing=true:hinting=true

! Cursor
!urxvt*cursorColor: #DCDCCC
urxvt*cursorColor: yellow
urxvt.cursorBlink: 1
urxvt.cursorUnderline: 1
! URLs
urxvt*.colorUL:    #ffffff
! Pseudo Transparency
!urxvt*shading:    50
!urxvt*transparent:true
! Zenburn color-scheme
!urxvt*background:  #3f3f3f
!urxvt*background: #1f1f1f
urxvt*background: [85]#1f1f1f
urxvt*foreground:  #dcdccc
! black + red
!urxvt*color0:     #3f3f3f
urxvt*color0:      #1E2320
urxvt*color1:      #705050
! green + yellow
urxvt*color2:      #60b48a
urxvt*color3:      #dfaf8f
! blue + purple
urxvt*color4:      #506070
urxvt*color5:      #dc8cc3
! cyan + white
urxvt*color6:      #8cd0d3
urxvt*color7:      #dcdccc
! bright-black + bright-red
urxvt*color8:      #709080
urxvt*color9:      #dca3a3
! bright-green + bright-yellow
urxvt*color10:     #c3bf9f
urxvt*color11:     #f0dfaf
! bright-blue + bright-purple
urxvt*color12:     #94bff3
urxvt*color13:     #ec93d3
! bright-cyan + bright-white
urxvt*color14:     #93e0e3
urxvt*color15:     #ffffff

! rofi
rofi.background: #3f3f3f
rofi.foreground: #dcdccc
rofi.highlightbg: #1aa
rofi.highlightfg: #111
rofi.bordercolor: #277
rofi.font: terminus 8
rofi.padding: 3
rofi.lines: 5
rofi.borderwidth: 3
